<Window x:Class="NotesWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notes" Height="300" Width="300" Background="Linen" FontSize="14"
        SizeChanged="Window_SizeChanged" Closed="Window_Closed" Icon="LogiSketch mini Icon.ico">
    <Grid>
        <DockPanel Name="notesDock" Background="WhiteSmoke"
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                   ScrollViewer.CanContentScroll="True" >        
        </DockPanel>
        <Button Height="20" Width="45" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Content="Clear" FontSize="10" Margin="10" Click="Clear_ButtonClick"></Button>
    </Grid>
</Window>
