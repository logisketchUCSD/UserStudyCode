<Window x:Class="StrokeInfoFormWPF.StrokeInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stroke Info" Height="581" Width="800"
        Background="AliceBlue">
    <Grid>
        <InkCanvas Name="mInkCanvas" Background="White" Height="Auto" Width="375" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        <Label Content="This Stroke" Foreground="Red" Height="Auto" HorizontalAlignment="Left" Margin="20,0,0,90" Name="thisStroke" VerticalAlignment="Bottom" />
        <Label Content="L-Strokes" Foreground="Black" Height="Auto" HorizontalAlignment="Left" Margin="20,0,0,70" Name="LStroke" VerticalAlignment="Bottom" />
        <Label Content="T-Strokes" Foreground="Blue" Height="Auto" HorizontalAlignment="Left" Margin="20,0,0,50" Name="TStroke" VerticalAlignment="Bottom" />
        <Label Content="X-Strokes" Foreground="Green" Height="Auto" HorizontalAlignment="Left" Margin="20,0,0,30" Name="XStroke" VerticalAlignment="Bottom" />
        <ListView Height="Auto" HorizontalAlignment="Stretch" Margin="400,10,10,10" Name="listView" VerticalAlignment="Stretch" Width="Auto">
            
        </ListView>
    </Grid>
</Window>
